<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Cube" Height="450" Width="800" Loaded="MainWindow_Loaded">
    <Grid>

        <Viewport3D x:Name="viewport">
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup>



                        <DirectionalLight Color="White" Direction="-1,-1,-1"/>
                        <DirectionalLight Color="White" Direction="1,1,1"/>
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>
            <Viewport3D.Camera>
                <PerspectiveCamera Position="0,0,5" LookDirection="0,0,-1" UpDirection="0,1,0" FieldOfView="90" />
            </Viewport3D.Camera>

        </Viewport3D>
        <TextBlock Name="MousePositionTextBlock" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"  FontSize="20" Width="685"/>
    </Grid>
</Window>
