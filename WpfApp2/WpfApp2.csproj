<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Models\Textures\bedrock.png" />
    <None Remove="Models\Textures\dirt.png" />
    <None Remove="Models\Textures\grass.png" />
    <None Remove="Models\Textures\stone.png" />
    <None Remove="wildgrass_2_ur_1024.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Models\Textures\bedrock.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Models\Textures\dirt.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Models\Textures\grass.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HelixToolkit.Wpf" Version="2.23.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="3dmodel\" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Models\Textures\stone.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Models\Textures\wildgrass_2_ur_1024.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
